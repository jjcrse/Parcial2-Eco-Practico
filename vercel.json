{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "game/**",
        "use": "@vercel/static"
      },
      {
        "src": "results-screen/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/game/(.*)",
        "dest": "/game/$1"
      },
      {
        "src": "/results/(.*)",
        "dest": "/results-screen/$1"
      },
      {
        "src": "/api/(.*)",
        "dest": "/index.js"
      },
      {
        "src": "/real-time/(.*)",
        "dest": "/index.js"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }